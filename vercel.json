{
  "rewrites": [
    {
      "source": "/robots.txt",
      "destination": "/robots.txt"
    },
    {
      "source": "/sitemap.xml",
      "destination": "/sitemap.xml"
    },
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ],
   "routes": [
    {
      "src": "/(sitemap.xml|robots.txt)",
      "dest": "/public/$1"
    }
  ]
}
